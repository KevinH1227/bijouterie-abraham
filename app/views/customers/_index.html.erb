<div class="contact-wrap" id="contact">
  <div class="container">
    <div class="row" style="display: flex; justify-content: center; color: white;">
      <div class="col-lg-7">
        <div class="contact_form">
          <div class="title">
            <h1><%= t 'newsletter' %>></h1>
          </div>
          <p><%= t 'sign_up' %></p>
          <%= form_for (Customer.new), :html => { :class =>"form" } do |f| %>
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :first_name, :required => true, placeholder: t ('first_name'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :last_name, placeholder: t ('last_name'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.email_field :email, :required => true, placeholder: t ('email'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :phone_number, :required => true, placeholder: t ('Phone'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                <%= f.text_area :message, :required => true, placeholder: t ('message'), class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <div class="button">
                <%= f.submit t ('join'), data: { confirm: t ('welcome') },class: "btn primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
