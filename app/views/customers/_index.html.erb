<div class="contact-wrap" id="contact">
  <div class="container">
    <div class="row" style="display: flex; justify-content: center; color: white;">
      <div class="col-lg-7">
        <div class="contact_form">
          <div class="title">
            <h1>Join our Newsletter</h1>
          </div>
          <p>Sign up now to receive email updates on new product announcements, speacial promotions, sales and more!!</p>
          <%= form_for (Customer.new), :html => { :class =>"form" } do |f| %>
            <div class="row">
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :first_name, :required => true, placeholder: "First Name", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.email_field :email, :required => true, placeholder: "Email", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="form-group">
                <%= f.text_field :phone_number, :required => true, placeholder: "Phone", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                <%= f.text_area :message, :required => true, placeholder: "Message", class: "form-control" %>
                </div>
              </div>
              <div class="col-lg-12">
                <div class="form-group">
                  <div class="button">
                <%= f.submit "Join Us", data: { confirm: "Welcome to the family!" },class: "btn primary" %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
